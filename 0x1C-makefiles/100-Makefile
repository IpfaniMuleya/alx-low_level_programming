CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(OBJ): $(SRC)
	$(CC) -c $(filter %.c,$^) -o $@ -I.

clean:
	-$(RM) *~ $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean: clean oclean
	-$(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re
